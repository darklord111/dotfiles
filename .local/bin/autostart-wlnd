#!/bin/bash
mpd &
mpDris2 &
dunst --startup_notification "true" &
#blueman-applet &
python .local/bin/brightness_notify.py -b amdgpu_bl0 &
python .local/battery_notify.py &
lxpolkit &
systemctl --user start scratch.service &
pkill pasystray || pasystray &
nm-applet --indicator &
wl-paste -t text --watch clipman store &
wl-paste -p -t text --watch clipman store -P --histpath="~/.local/share/clipman.json" &
xrdb -merge ~/.config/X11/Xresources &
systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP DISPLAY SWAYSOCK &
dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP DISPLAY SWAYSOCK &
clipman clear --all &
