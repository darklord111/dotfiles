#!/bin/bash
#
# a simple dmenu session script
#
###

DMENU='dmenu -i'
choice=$(echo -e "haxxor\nnormie\nclg" | $DMENU)

case "$choice" in
  haxxor) firefox -profile ~/.mozilla/firefox/haxxor &;;
  normie) firefox -profile ~/.mozilla/firefox/normie &;;
  clg) firefox -profile ~/.mozilla/firefox/clg &;;
esac
