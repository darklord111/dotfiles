#!/bin/bash
#
# a simple dmenu session script
#
###

choice=$(echo -e "lock_X\nlockwlnd\nshutdown\nreboot\nsuspend\nhibernate\nreloadsxhkd\nreloadsway\nsusthib\nhybslp" | dmenu)

case "$choice" in
  lock_X) slock &;;
  shutdown) sudo shutdown 0 &;;
  reboot) sudo reboot &;;
  suspend) sudo systemctl suspend &;;
  reloadsxhkd) killall sxhkd && sxhkd &;;
  lockwlnd) swaylock-blur &;;
  reloadsway) swaymsg reload &;;
  hibernate) sudo systemctl hibernate &;;
  susthib) sudo systemctl suspend-then-hibernate &;;
  hybslp) sudo systemctl hybrid-sleep &;;
esac
