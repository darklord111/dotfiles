#!/bin/bash
#
# a simple dmenu session script
#
###

DMENU='dmenu -i'
choice=$(echo -e "lock_X\nshutdown\nreboot\nsuspend\nreloadsxhkd" | $DMENU)

case "$choice" in
  lock_X) slock &;;
  shutdown) sudo shutdown 0 &;;
  reboot) sudo reboot &;;
  suspend) sudo systemctl suspend &;;
  reloadsxhkd) killall sxhkd && sxhkd &;;
esac
