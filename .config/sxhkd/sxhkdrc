#
# wm independent hotkeys
#
#
# media keys
#
super + F7
#	mpc next
	playerctl next
super + F6
#	mpc toggle
	playerctl play-pause
super + F5
#	mpc prev
	playerctl previous
super + F8
#	mpc stop
	playerctl stop
super + F9
#	mpc seekthrough -5
	playerctl position 5-
super + F10
#	mpc seekthrough +5
	playerctl position 5+
super + shift + e
	shutdmenu
super + c
	clipmenu
super + shift + a
	dmenuumount
super + a
	dmenumount
super + shift + u
	dmenuunicode
super + w
	ffprof
super + shift + c
	dunstctl context

XF86AudioMute
	pactl set-sink-mute alsa_output.pci-0000_05_00.6.analog-stereo toggle

XF86AudioLowerVolume
	pactl set-sink-volume alsa_output.pci-0000_05_00.6.analog-stereo -5%

XF86AudioRaiseVolume
	pactl set-sink-volume alsa_output.pci-0000_05_00.6.analog-stereo +5%

XF86AudioMicMute
	pactl set-source-mute alsa_input.pci-0000_05_00.6.analog-stereo toggle

XF86MonBrightnessDown
	sudo bright down

XF86MonBrightnessUp
	sudo bright up

XF86Display
	monctrl
