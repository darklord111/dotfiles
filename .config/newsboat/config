#podboat config
download-path "~/mus/podcasts/"
player "mpv"

# general config
auto-reload yes
cleanup-on-quit yes

# notifications config

notify-always yes
notify-format "newsbeuter: %n unread articles within %f unread feeds"
notify-program notify-send
notify-xterm yes
notify-screen yes

# macros config

browser "firefox"
#macro y set browser "swallow mpv --ytdl-raw-options=format-sort=res:1080 %u" ; open-in-browser ; set browser "firefox"
macro y set browser "mpv --ytdl-format=best --ytdl %u" ; open-in-browser ; set browser "firefox"

# keybindings

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key l open
bind-key h quit
bind-key D pb-download
bind-key x pb-delete

# colours config

color listnormal cyan default
color listfocus black yellow standout bold
color listnormal_unread blue default
color listfocus_unread yellow default bold
color info red black bold
color article white default bold

#Killfile config
define-filter "IGN" "title =~ \"Daily\ Fix\" or title =~ \"Trailer\" or title =~ \"Review\" or title =~ \"The Fix\""
# ignore-article "https://www.youtube.com/feeds/videos.xml?channel_id=UCKy1dAqELo0zrOtPkf0eTMw" "title !~\"Daily\ Fix\""
# ignore-article "https://www.youtube.com/feeds/videos.xml?channel_id=UCKy1dAqELo0zrOtPkf0eTMw" "title !~\"Trailer\""
# ignore-mode display

# highlights config

highlight all "---.*---" yellow
highlight feedlist ".*(0/0))" black
highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default
highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default

